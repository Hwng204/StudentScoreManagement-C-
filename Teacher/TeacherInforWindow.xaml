        mc:Ignorable="d"
        Title="TeacherInforWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="teacherNameField" HorizontalAlignment="Left" Margin="258,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="395" Height="23"/>
        <TextBlock HorizontalAlignment="Left" Margin="127,74,0,0" TextWrapping="Wrap" Text="Teacher code" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="127,122,0,0" TextWrapping="Wrap" Text="Full Name" VerticalAlignment="Top"/>
