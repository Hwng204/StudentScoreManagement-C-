<Window x:Class="StudentScoreManager.Admin.UpdateStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreManager.Admin"
        mc:Ignorable="d"
        Title="UpdateStudent" Height="450" Width="450">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="176,10,0,0" TextWrapping="Wrap" Text="Update student" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,68,0,0" TextWrapping="Wrap" Text="Student Code:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,117,0,0" TextWrapping="Wrap" Text="Full name:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,164,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,0,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,253,0,0" TextWrapping="Wrap" Text="Status:" VerticalAlignment="Top"/>
        <TextBox x:Name="fullNameField" HorizontalAlignment="Left" Margin="176,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="173" Height="16"/>
        <TextBox x:Name="emailField" HorizontalAlignment="Left" Margin="176,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="173" Height="16" IsReadOnly="True"/>
        <TextBox x:Name="passwordField" HorizontalAlignment="Left" Margin="176,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="173" Height="16"/>
        <RadioButton x:Name="statusActive" Content="Active" GroupName="status" HorizontalAlignment="Left" Margin="176,261,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="statusDeactive" Content="Deactive" GroupName="status" HorizontalAlignment="Left" Margin="285,261,0,0" VerticalAlignment="Top"/>
        <Button Content="Quay lại" HorizontalAlignment="Left" Margin="121,343,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click"/>
        <Button Content="Cập nhập" HorizontalAlignment="Left" Margin="278,343,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click_1"/>
        <TextBlock x:Name="studentCodeField" HorizontalAlignment="Left" Margin="178,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
