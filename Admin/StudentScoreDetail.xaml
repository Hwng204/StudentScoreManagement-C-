<Window x:Class="StudentScoreManager.Admin.StudentScoreDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreManager.Admin"
        mc:Ignorable="d"
        Title="StudentScoreDetail" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Score Detail" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgScores" AutoGenerateColumns="False" IsReadOnly="True" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Component" Binding="{Binding ComponentName}" Width="2*"/>
                    <DataGridTextColumn Header="Weight (%)" Binding="{Binding Weight}" Width="*"/>
                    <DataGridTextColumn Header="Score" Binding="{Binding ScoreDisplay}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Close" Width="80" HorizontalAlignment="Right" Margin="0,10,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
