<Window x:Class="StudentScoreManager.Admin.ClassDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreManager.Admin"
        mc:Ignorable="d"
        Title="ClassDetail" Height="550" Width="850">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Thông tin lớp học -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Thông tin lớp học" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Class Code: " FontWeight="Bold" Width="100"/>
                <TextBlock x:Name="txtClassId"/>
                <TextBlock Text="   Class Name: " FontWeight="Bold" Margin="20,0,0,0"/>
                <TextBlock x:Name="txtClassName"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Subject: " FontWeight="Bold" Width="100"/>
                <TextBlock x:Name="txtSubject"/>
                <TextBlock Text="   Teacher: " FontWeight="Bold" Margin="20,0,0,0"/>
                <TextBlock x:Name="txtTeacher"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Slot: " FontWeight="Bold" Width="100"/>
                <TextBlock x:Name="txtSlot"/>
                <TextBlock Text="   Số SV hiện tại: " FontWeight="Bold" Margin="20,0,0,0"/>
                <TextBlock x:Name="txtCurrentCount"/>
            </StackPanel>
        </StackPanel>

        <!-- Danh sách học sinh -->
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Danh sách chưa tham gia -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Sinh viên chưa tham gia" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <DataGrid x:Name="dgUnenrolledStudents" AutoGenerateColumns="False" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding StudentId}"/>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Nút -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10">
                <Button Content="Add" Click="AddStudent_Click" Margin="0,5"/>
                <Button Content="Remove" Click="RemoveStudent_Click" Margin="0,5"/>
            </StackPanel>

            <!-- Danh sách đã tham gia -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Sinh viên đã tham gia" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <DataGrid x:Name="dgEnrolledStudents" AutoGenerateColumns="False" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding StudentId}"/>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>

        <!-- Nút hành động -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Back" Width="100" Margin="0,0,10,0" Click="Back_Click"/>
            <Button Content="Save" Width="100" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
