<Window x:Class="StudentScoreManager.Admin.StudentDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreManager.Admin"
        mc:Ignorable="d"
        Title="StudentDetail" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel: Student Info -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Student Information" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="Student Code:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtStudentCode" IsReadOnly="True"/>
            <TextBlock Text="Full Name:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtFullName" IsReadOnly="True"/>
            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail" IsReadOnly="True"/>
            <TextBlock Text="Status:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtStatus" IsReadOnly="True"/>
            <Button Content="Back" Width="80" Margin="0,20,0,0" Click="Back_Click"/>
        </StackPanel>

        <!-- Right panel: Classes + View Score -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Enrolled Classes" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgClasses" AutoGenerateColumns="False" Height="200" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Class Code" Binding="{Binding ClassCode}" Width="*"/>
                    <DataGridTextColumn Header="Class Name" Binding="{Binding ClassName}" Width="2*"/>
                    <DataGridTextColumn Header="Subject" Binding="{Binding Subject.SubjectName}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="View Score" Width="100" Margin="0,10,0,0" Click="ViewScore_Click"/>
        </StackPanel>
    </Grid>
</Window>
