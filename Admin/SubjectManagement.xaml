<Window x:Class="StudentScoreManager.Admin.SubjectManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreManager.Admin"
        mc:Ignorable="d"
        Title="Subject Management" Height="500" Width="850"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="logoutScr" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navigation Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="classScr" Content="Class" Width="80" Margin="5" Click="classScr_Click"/>
            <Button x:Name="studentScr" Content="Student" Width="80" Margin="5" Click="studentScr_Click"/>
            <Button x:Name="teacherScr" Content="Teacher" Width="80" Margin="5" Click="teacherScr_Click"/>
            <Button x:Name="subjectScr" Content="Subject" Width="80" Margin="5"/>
            <Button x:Name="logout" Content="Logout" Width="80" Margin="5" Click="logout_Click"/>
        </StackPanel>

        <!-- Search Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Find by code" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="searchSubject" Width="200" Height="25" Margin="0,0,10,0"/>
            <Button x:Name="searchBtb" Content="Search" Width="80" Height="25" Click="searchBtb_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="list" Grid.Row="3" Margin="0,10" AutoGenerateColumns="False" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Subject Id" Binding="{Binding SubjectId}" Width="0.3*"/>
                <DataGridTextColumn Header="Subject code" Binding="{Binding SubjectCode}" Width="0.5*"/>
                <DataGridTextColumn Header="Subject name" Binding="{Binding SubjectName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="add" Content="Add" Width="80" Height="30" Margin="5" Click="add_Click"/>
            <Button x:Name="update" Content="Update" Width="80" Height="30" Margin="5" Click="update_Click"/>
            <Button x:Name="delete" Content="Delete" Width="80" Height="30" Margin="5" Click="delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
