<Window x:Class="StudentScoreManager.Student.StudentScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreManager.Student"
        mc:Ignorable="d"
        Title="StudentScoreWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="scoreDataGrid" AutoGenerateColumns="False" Margin="10,10,10,74">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Component Name" Binding="{Binding ComponentName}" Width="*"/>
                <DataGridTextColumn Header="Weight (%)" Binding="{Binding Weight}" Width="*"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Quay lại" HorizontalAlignment="Center" Margin="0,365,0,0" VerticalAlignment="Top" Height="24" Width="76" Click="Button_Click"/>
    </Grid>
</Window>
