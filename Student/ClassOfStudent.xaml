<Window x:Class="StudentScoreManager.Student.ClassOfStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScoreManager.Student"
        mc:Ignorable="d"
        Title="ClassOfStudent" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="searchClassField" Width="200" Height="23" HorizontalAlignment="Left" Margin="268,56,0,0" VerticalAlignment="Top" />
        <Button Content="Search" Width="70" Height="23" HorizontalAlignment="Left" Margin="514,56,0,0" VerticalAlignment="Top" Click="Button_Click"  />
        <DataGrid x:Name="classDataGrid" AutoGenerateColumns="False" Margin="127,104,127,78">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Class ID" Binding="{Binding ClassId}" Width="*"/>
                <DataGridTextColumn Header="Class Code" Binding="{Binding ClassCode}" Width="*"/>
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject.SubjectCode}" Width="*"/>
                <DataGridTextColumn Header="Subject Name" Binding="{Binding Subject.SubjectName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Margin="368,10,0,0" TextWrapping="Wrap" Text="Classes" VerticalAlignment="Top" Height="19" Width="100" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="138,56,0,0" TextWrapping="Wrap" Text="Search by class ID:" VerticalAlignment="Top"/>
        <Button Content="View score" Width="70" Height="23" HorizontalAlignment="Left" Margin="603,375,0,0" VerticalAlignment="Top" Click="Button_Click_1" />
        <Button Content="Back" Width="70" Height="23" HorizontalAlignment="Left" Margin="479,375,0,0" VerticalAlignment="Top" Click="Button_Click_2"  />

    </Grid>
</Window>
